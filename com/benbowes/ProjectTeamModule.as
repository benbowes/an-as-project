package com.benbowes{	import flash.net.*;	import flash.display.*;	import flash.events.*;	import flash.text.*;	import com.greensock.*;	import com.greensock.easing.*;	import com.benbowes.Global;	import com.benbowes.Utility;  			// Import the necessary classes.	import com.jumpeye.Events.FLASHEFFEvents;	import com.jumpeye.flashEff2.text.scrollSlide.FETScrollSlide;    public class ProjectTeamModule extends Sprite{		private var SCOPE;          private var BOTTOM_ORIG_Y;		private var SCOPE_ORIG_Y; 		public var webAddress:String;		        public function ProjectTeamModule() {			SCOPE = this;            SCOPE.addEventListener(Event.ADDED_TO_STAGE, init,false,0,true);			SCOPE.addEventListener(Event.REMOVED_FROM_STAGE, kill,false,0,true);        }			private function init(e:Event = null){ 			TweenLite.to(bgStetch,0,{height:40});			BOTTOM_ORIG_Y = SCOPE.bottomCap.y;			SCOPE_ORIG_Y = SCOPE.y; 					    SCOPE.addEventListener(MouseEvent.ROLL_OVER,over,false,0,true); 			SCOPE.addEventListener(MouseEvent.ROLL_OUT,out,false,0,true); 			if(webAddress != ""){				webAddressBtn.addEventListener(MouseEvent.CLICK,visitWeb,false,0,true);				webAddressBtn.addEventListener(MouseEvent.ROLL_OVER,overWeb,false,0,true);				webAddressBtn.addEventListener(MouseEvent.ROLL_OUT,outWeb,false,0,true);				webAddressBtn.buttonMode = true; 			}else{				webAddressBtn.visible = false;			}		   } 		private function visitWeb(e:MouseEvent=null):void{			navigateToURL(new URLRequest(webAddress),"_blank")		}		private function overWeb(e:MouseEvent = null){    			TweenLite.to(webAddressBtn,0.2,{alpha:0.4,ease:Quint.easeInOut}); 		}		private function outWeb(e:MouseEvent = null){    			TweenLite.to(webAddressBtn,1,{alpha:1,ease:Quint.easeInOut}); 		}		private function over(e:MouseEvent = null){  			//TweenLite.to(bgStetch,0,{height:40});  			TweenLite.to(plus,0.8,{alpha:0,ease:Quint.easeInOut}); 		    TweenLite.to(bottomCap,0.8,{y:530,ease:Quint.easeInOut});			TweenLite.to(SCOPE,0.8,{y:50,ease:Quint.easeInOut});			TweenLite.to(bgStetch,0.8,{height:540,ease:Quint.easeInOut});			TweenLite.to(masker,0.8,{height:470,ease:Quint.easeInOut});  		}		private function out(e:MouseEvent = null){                           			TweenLite.to(plus,1,{alpha:1,ease:Quint.easeInOut});		    TweenLite.to(bottomCap,1,{y:BOTTOM_ORIG_Y,ease:Quint.easeInOut});			TweenLite.to(SCOPE,1,{y:SCOPE_ORIG_Y,ease:Quint.easeInOut});			TweenLite.to(bgStetch,1,{height:40,ease:Quint.easeInOut}); 			//TweenLite.to(bgStetch,0,{delay:1, height:0}); 			TweenLite.to(masker,1,{height:1,ease:Quint.easeInOut});        		}   				public function hide() {   		}		//////////////////////////////////////////////////////////////////		private function kill(e:Event):void{			TweenMax.killChildTweensOf (SCOPE);			SCOPE.removeEventListener(Event.REMOVED_FROM_STAGE, kill);			SCOPE = null;		}    }}