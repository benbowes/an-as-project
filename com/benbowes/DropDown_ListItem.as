package com.benbowes{ 		import flash.display.*;	import flash.text.*;	import flash.events.*;		import com.greensock.*;	import com.greensock.easing.*;		public class DropDown_ListItem extends MovieClip {				private var SCOPE = this;				public function DropDown_ListItem():void{			SCOPE.addEventListener (Event.ADDED_TO_STAGE,init,false,0,true);			SCOPE.addEventListener (Event.REMOVED_FROM_STAGE,kill,false,0,true);		}				///////////////////////////////////////////////////////////////////		private function init(e:Event=null):void{			SCOPE.removeEventListener (Event.ADDED_TO_STAGE,init);			SCOPE.buttonMode = true;			SCOPE.mouseChildren = false;			SCOPE.addEventListener(MouseEvent.ROLL_OVER,overHandler,false,0,true);			SCOPE.addEventListener(MouseEvent.ROLL_OUT,outHandler,false,0,true);			SCOPE.addEventListener(MouseEvent.CLICK,clickHandler,false,0,true);					}		private function clickHandler(e:Event=null):void{			var mc = MovieClip(SCOPE).parent.parent.getChildByName("dropDownMaster");			mc.tf.text = SCOPE.tf.text;		}		private function overHandler(e:Event=null):void{			TweenMax.to(bg,0.3,{tint:0x666666});		}		private function outHandler(e:Event=null):void{			TweenMax.to(bg,0.3,{removeTint:true});		}		/////////////////////////////////////////////////////////////////		private function kill(e:Event=null) {						trace(SCOPE, "kill")						TweenMax.killChildTweensOf(SCOPE as MovieClip);			TweenMax.killTweensOf(SCOPE as MovieClip);							SCOPE.removeEventListener (Event.REMOVED_FROM_STAGE,kill);			SCOPE.removeEventListener(MouseEvent.ROLL_OVER,overHandler);			SCOPE.removeEventListener(MouseEvent.ROLL_OUT,outHandler);			SCOPE.removeEventListener(MouseEvent.CLICK,clickHandler);						SCOPE = null;		}	}	}