package com.benbowes{	import flash.net.*;	import flash.display.*;	import flash.events.*;	import flash.text.*;	import com.greensock.*;	import com.greensock.easing.*;	import com.benbowes.Global;	import com.benbowes.Utility;  	import flash.utils.getDefinitionByName;	    public class PageProjectTeam extends Sprite{		private var SCOPE;  		private var contentArray:Array = [];		private var myTimeline:TimelineMax;  		        public function PageProjectTeam() {			SCOPE = this;            SCOPE.addEventListener(Event.ADDED_TO_STAGE, init,false,0,true);			SCOPE.addEventListener(Event.REMOVED_FROM_STAGE, kill,false,0,true);            SCOPE.addEventListener(EventKill.DEATH, hide,false,0,true);          }			public function init(e:Event = null){  			myTimeline = new TimelineMax();   						//contentArray = []; 			//trace("contentArray a",contentArray,Global.FLASHVARS.projectTeamXML.teamMembers.team[0].heading.text(),Global.FLASHVARS.projectTeamXML.teamMembers.team[0].bodyText.text(),Global.FLASHVARS.projectTeamXML.teamMembers.team[0].webLink.text());  					    contentArray[0] = {logo:"logoManhat",							   heading:Global.FLASHVARS.projectTeamXML.teamMembers.team[0].heading.text(),							   bodyText:Global.FLASHVARS.projectTeamXML.teamMembers.team[0].bodyText.text(),							   webLink:Global.FLASHVARS.projectTeamXML.teamMembers.team[0].webLink.text()};			contentArray[1] = {logo:"logoElenberg",							   heading:Global.FLASHVARS.projectTeamXML.teamMembers.team[1].heading.text(),							   bodyText:Global.FLASHVARS.projectTeamXML.teamMembers.team[1].bodyText.text(),							   webLink:Global.FLASHVARS.projectTeamXML.teamMembers.team[1].webLink.text()};   			contentArray[2] = {logo:"logoTract",							   heading:Global.FLASHVARS.projectTeamXML.teamMembers.team[2].heading.text(),							   bodyText:Global.FLASHVARS.projectTeamXML.teamMembers.team[2].bodyText.text(),							   webLink:Global.FLASHVARS.projectTeamXML.teamMembers.team[2].webLink.text()};  																							   for(var i=0;i<contentArray.length;i++){			   var mc = SCOPE.addChild(new com.benbowes.ProjectTeamModule()); 				mc.x = 50 + (205*i);				mc.y = 400;				var ClassReference = getDefinitionByName(contentArray[i].logo);				mc.logo.addChild(new Bitmap(new ClassReference(0,0)));   				mc.headingTf.htmlText = contentArray[i].heading; 				mc.bodyTf.autoSize = "left";// TextFieldAutoSize.LEFT;				mc.bodyTf.htmlText = contentArray[i].bodyText; 				mc.webAddress = contentArray[i].webLink; 				myTimeline.insert( TweenMax.from(mc,1,{blurFilter:{blurX:8,blurY:8}, delay:(i*0.07),tint:0xFFFFFF,ease:Quint.easeInOut}) );		   }		}    				public function hide() {               myTimeline.timeScale = 3;            myTimeline.reverse();		}		//////////////////////////////////////////////////////////////////		private function kill(e:Event):void{			TweenMax.killChildTweensOf (SCOPE);			SCOPE.removeEventListener(Event.REMOVED_FROM_STAGE, kill);			SCOPE = null;		}    }}