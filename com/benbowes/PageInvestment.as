ax.from(SCOPE.bodyTf,1,{delay:2, alpha:0, ease:Quint.easeInOut}) ); 				 			  					}   					public function hide() {   			hideEffect = new FETScrollSlide();			hideEffect.groupDuration = 0.3;			effect.hideTransition = hideEffect;			effect.hide();						myTimeline.timeScale = 3;			myTimeline.reverse();   			//TweenMax.to(pagesTf,0.4,{alpha:0, ease:Quint.easeInOut});		}		//////////////////////////////////////////////////////////////////		private function kill(e:Event):void{			TweenMax.killChildTweensOf (SCOPE);			SCOPE.removeEventListener(Event.REMOVED_FROM_STAGE, kill);			SCOPE = null;		}    }}